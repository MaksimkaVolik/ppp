<div class="px-2 com">
   <div class="d-flex flex-row bd-highlight ">
      <div class=" bd-highlight">[profile]<img src="{foto}" width="20" height="20" class="rounded-circle">[/profile]</div>
      [fullname]  
      <div class=" bd-highlight ms-2 td-none color-fix font-weight-bold">[profile] {fullname} [/profile]</div>
      <div class=" bd-highlight ms-2 td-none com-login ">[profile]@{login}[/profile]</div>
      [/fullname]
      [not-fullname] 
      <div class="bd-highlight ms-2 td-none color-fix font-weight-bold">[profile]{login}[/profile]</div>
      [/not-fullname]
   </div>
   <div class="mt-1">
      <a href="{news-link}" class="td-none link-dark ">
         <div class="com-text">{comment}</div>
      </a>
   </div>
</div>